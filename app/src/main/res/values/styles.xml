<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>



    <style name="DarkTheme"  parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="FruitActivityTheme" parent="AppTheme"></style>

    <style name="SettingCategory">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:gravity">bottom</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/material_lightblue_500</item>
    </style>
    <style name="SettingsCellSingleCompoundButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:checked">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="SettingsCellDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="CollapsingToolbarTitleStyle.About" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MainTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimary</item>

    </style>

    <style name="MainTheme.Fullscreen" parent="MainTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyToolbar" parent="Base.Widget.AppCompat.Toolbar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--Toolbar标题颜色-->
        <item name="titleTextColor">@color/white</item>
        <!--ActionBar默认按钮的颜色-->
        <item name="colorControlNormal">@color/white</item>
        <!--子控件相对父控件位置-->
        <item name="android:gravity">center</item>
        <!--NavigationButton-->
        <item name="toolbarNavigationButtonStyle">@style/Widget.AppCompat.Toolbar.Button.Navigation</item>

    </style>

    <style name="loading_progress_small" parent="@android:style/Widget.ProgressBar.Large">
        <item name="android:indeterminateDrawable">@drawable/base_progress_round_small</item>
        <item name="android:minWidth">39dp</item>
        <item name="android:maxWidth">39dp</item>
        <item name="android:minHeight">39dp</item>
        <item name="android:maxHeight">39dp</item>
    </style>


</resources>
